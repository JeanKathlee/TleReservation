<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Reservation - <%= r.id %></title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    @media print {
      .no-print { display: none; }
      .page { page-break-after: always; }
    }
    .bondpage { width: 100%; max-width: 800px; margin: 0 auto; border: 1px solid #333; padding: 10px; }
    .two-copies { display: flex; flex-direction: column; gap: 20px; }
    .copy { border: 1px dashed #999; padding: 10px; }
    .fields { display:flex; gap:10px; }
    .fields > div { flex:1 }
  </style>
</head>
<body>
  <div class="no-print">
    <a href="/">Back</a> | <button onclick="window.print()">Print / Save PDF</button>
  </div>

  <div class="bondpage two-copies">
    <% for (let i=0;i<2;i++) { %>
    <div class="copy">
      <h2 style="text-align:center">UNIVERSITY OF SAN JOSE - RECOLETOS</h2>
      <h3 style="text-align:center">T.L.E LABORATORY RESERVATION FORM</h3>
      <div class="fields">
        <div><strong>Venue:</strong> <%= r.venue %></div>
        <div><strong>Date:</strong> <%= r.date %></div>
      </div>
      <div class="fields" style="margin-top:8px">
        <div><strong>Purpose of Activity:</strong><br><%= r.purpose || 'N/A' %></div>
        <div><strong>Tools/Equipment:</strong><br><%= r.equipment || 'N/A' %></div>
      </div>
      <div style="margin-top:8px">
        <strong>Person making the reservation:</strong><br>
        <div style="height:40px"> <%= r.person_name %></div>
      </div>

      <div style="margin-top:12px; display:flex; justify-content:space-between">
        <div>
          <strong>Recommended Approval:</strong>
        </div>
        <div>
          <strong>Approved by:</strong>
          <div style="height:40px">&nbsp;</div>
        </div>
      </div>

      <div style="margin-top:8px; font-size:12px; color:#444">Status: <strong><%= r.status %></strong></div>
    </div>
    <% } %>
  </div>

</body>
</html>
