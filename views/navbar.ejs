<!-- Logout / Switch Account Confirmation Modal -->
<div class="modal fade" id="confirmLogoutModal" tabindex="-1">
  <div class="modal-dialog modal-sm modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="confirmLogoutBody">
        Are you sure you want to logout?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
        <button type="button" id="confirmLogoutBtn" class="btn btn-danger btn-sm">Logout</button>
      </div>
    </div>
  </div>
</div>

      <!-- profile dropdown used instead of modal -->

<script>
  function openLogoutModal() {
    const body = document.getElementById('confirmLogoutBody');
    const btn = document.getElementById('confirmLogoutBtn');
    body.textContent = 'Are you sure you want to logout?';
    btn.textContent = 'Logout';
    btn.classList.remove('btn-warning');
    btn.classList.add('btn-danger');
    const modalEl = document.getElementById('confirmLogoutModal');
    const modal = (typeof bootstrap !== 'undefined' && bootstrap.Modal)
      ? bootstrap.Modal.getOrCreateInstance(modalEl)
      : null;
    if (modal) modal.show();
  }

  document.addEventListener('click', (e) => {
    if (e.target && e.target.id === 'confirmLogoutBtn') {
      // Perform logout and follow server redirect
      window.location = '/logout';
    }
  });

  // profile dropdown uses Bootstrap's dropdown; no JS needed here
</script>
<style>
  /* push page content down so fixed navbar doesn't overlap */
  body { padding-top: 64px; }
</style>
