<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Equipment Reservations - TLE Lab</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%- include('navbar') %>

    <div class="d-flex">
      <%- include('sidebar') %>
      
      <main class="flex-grow-1 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>Equipment Reservations</h2>
          <a href="/?tab=equipment" class="btn btn-primary">+ New Equipment Reservation</a>
        </div>

        <% if (!reservations || reservations.length === 0) { %>
          <div class="alert alert-info">
            No equipment reservations yet. <a href="/?tab=equipment">Reserve equipment now</a>
          </div>
        <% } else { %>
          <div class="card shadow-sm">
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover mb-0">
                  <thead class="table-light">
                    <tr>
                      <th>Equipment</th>
                      <th>Date</th>
                      <th>Time</th>
                      <th>Purpose</th>
                      <th>Status</th>
                      <th>Progress</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% reservations.forEach(ev => { %>
                      <tr>
                        <td><strong><%= ev.equipment %></strong></td>
                        <td><%= ev.date %></td>
                        <td><%= formatTimeRange(ev.time_from, ev.time_to) %></td>
                        <td><%= ev.purpose || '-' %></td>
                        <td>
                          <span class="badge bg-<%= ev.status==='approved' ? 'success' : ev.status==='declined' ? 'danger' : ev.status==='cancelled' ? 'secondary' : 'warning' %>">
                            <%= ev.status %>
                          </span>
                        </td>
                        <td style="min-width: 150px;">
                          <% if (ev.status === 'pending') { %>
                            <div class="progress" style="height: 20px;">
                              <div class="progress-bar bg-warning" role="progressbar" style="width: 33%">Pending</div>
                            </div>
                          <% } else if (ev.status === 'approved') { %>
                            <div class="progress" style="height: 20px;">
                              <div class="progress-bar bg-success" role="progressbar" style="width: 100%">Approved</div>
                            </div>
                          <% } else if (ev.status === 'declined') { %>
                            <div class="progress" style="height: 20px;">
                              <div class="progress-bar bg-danger" role="progressbar" style="width: 100%">Declined</div>
                            </div>
                          <% } else { %>
                            <div class="progress" style="height: 20px;">
                              <div class="progress-bar bg-secondary" role="progressbar" style="width: 100%">Cancelled</div>
                            </div>
                          <% } %>
                        </td>
                        <td>
                          <a class="btn btn-sm btn-outline-primary" href="/reservation/<%= ev.id %>">View</a>
                          <% if (ev.status === 'pending') { %>
                            <form method="post" action="/cancel/<%= ev.id %>" style="display:inline">
                              <button class="btn btn-sm btn-outline-danger ms-1">Cancel</button>
                            </form>
                          <% } %>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <% } %>
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
