<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Reservation - <%= r.id %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css" />
    <style>
      @media print { .no-print { display:none } }
      .reservation-card { max-width:800px; margin: 0 auto }
      .copy { border: 1px solid #e9ecef; padding:16px; border-radius:6px }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-light bg-white border-bottom">
      <div class="container">
        <a class="navbar-brand" href="/">TLE Lab Reservation</a>
        <div>
          <a class="btn btn-outline-secondary btn-sm" href="/calendar">Calendar</a>
          <a class="btn btn-link btn-sm ms-2" href="/admin">Admin</a>
        </div>
      </div>
    </nav>

    <main class="container py-4 reservation-card">
      <div class="d-flex justify-content-between no-print mb-3">
        <a href="/" class="btn btn-link">Back</a>
        <button onclick="window.print()" class="btn btn-primary">Print / Save PDF</button>
      </div>

      <div class="row g-3">
        <% for (let i=0;i<2;i++) { %>
          <div class="col-12 mb-3">
            <div class="copy shadow-sm">
              <div class="text-center mb-2">
                <h5 class="mb-0">UNIVERSITY OF SAN JOSE - RECOLETOS</h5>
                <small class="text-muted">Technology and Livelihood Education (T.L.E)</small>
              </div>
              <h6 class="mt-2">T.L.E Laboratory Reservation Form</h6>

              <div class="row mt-2">
                <div class="col-md-6"><strong>Venue:</strong> <div><%= r.venue %></div></div>
                <div class="col-md-6"><strong>Date:</strong> <div><%= r.date %></div></div>
              </div>

              <div class="row mt-2">
                <div class="col-md-6"><strong>Time:</strong> <div><%= r.time_from %> - <%= r.time_to %></div></div>
                <% if (r.equipment) { %>
                  <div class="col-md-6"><strong>Equipment:</strong> <div><%= r.equipment %></div></div>
                <% } %>
              </div>

              <div class="row mt-2">
                <div class="col-12"><strong>Purpose of Activity:</strong><div><%= r.purpose || 'N/A' %></div></div>
              </div>

              <div class="mt-3"><strong>Person making the reservation</strong>
                <div class="border rounded p-2"><%= r.person_name %></div>
              </div>

              <div class="d-flex justify-content-between mt-3">
                <div>
                  <small class="text-muted">Recommended Approval</small>
                </div>
                <div>
                  <small class="text-muted">Approved by</small>
                  <div style="height:36px"></div>
                </div>
              </div>

              <div class="mt-2 text-muted">Status: <strong><%= r.status %></strong></div>
            </div>
          </div>
        <% } %>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
