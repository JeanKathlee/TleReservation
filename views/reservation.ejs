    <style>
      /* Print layout: two copies on one legal bondpaper */
      @page { size: legal portrait; margin: 12mm; }
      @media print {
        html, body { height: 100%; }
        .no-print { display:none !important; }
        nav, .navbar, .fixed-top { display:none !important; }
        body { padding-top: 0 !important; }
        .reservation-card { width: 100%; max-width: none; margin: 0; padding: 0; }
        .sheet { display:block; width:100%; box-sizing:border-box; page-break-after: always; }
        /* reduce sizes so two copies fit on one legal page */
        .copy { border: 1px solid #000; padding:6px; border-radius:0; margin:0 0 6mm 0; box-sizing:border-box; height:150mm; overflow:hidden; }
        .copy:last-child { margin-bottom: 0; }
        /* tighten typography for print */
        .copy h5 { font-size:13px; margin:0; }
        .copy h6 { font-size:11px; margin:6px 0 8px 0; }
        .copy strong { font-size:11px; }
        .copy { font-size:10px; }
        /* specifically shrink reminders text */
        .copy .reminders { font-size:9px; line-height:1.05; }
        .copy .reminders ol { margin:0; padding-left:14px; }
      }

      /* Screen layout */
      .reservation-card { max-width:1100px; width:100%; margin: 0 auto }
      .copy { border: 1px solid #e9ecef; padding:20px; border-radius:6px }
      .copy { page-break-inside: avoid; }
    </style>
